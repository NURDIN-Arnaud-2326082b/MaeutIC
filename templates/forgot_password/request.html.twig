{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Maieutic{% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="bg-white/80 p-8 rounded-xl shadow-lg w-full max-w-md backdrop-blur-sm">
        <h1 class="text-2xl font-bold mb-6 text-center text-gray-900">Mot de passe oublié</h1>
        
        {% for flash_error in app.flashes('error') %}
            <div class="mb-4 p-3 rounded bg-red-100 border border-red-400 text-red-700 text-center">
                {{ flash_error }}
            </div>
        {% endfor %}

        <p class="text-gray-600 mb-6 text-center text-sm">
            Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
        </p>

        {{ form_start(requestForm, {'attr': {'class': 'space-y-6'}}) }}
            <div>
                {{ form_label(requestForm.email, null, {
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}
                }) }}
                {{ form_widget(requestForm.email, {
                    'attr': {'class': 'mt-1 block w-full border border-gray-300 rounded-md p-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200'}
                }) }}
                {{ form_errors(requestForm.email) }}
            </div>

            <input type="hidden" name="g-recaptcha-response" id="recaptchaResponse">

            <button type="submit" class="w-full bg-blue-700 text-white py-2 rounded-lg hover:bg-blue-800 transition duration-200 font-medium">
                Envoyer le lien de réinitialisation
            </button>
        {{ form_end(requestForm) }}

        <div class="mt-6 text-center">
            <a href="{{ path('app_login') }}" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                ← Retour à la connexion
            </a>
        </div>
    </div>
</div>

<script src="https://www.google.com/recaptcha/api.js?render=6Lfx-gIsAAAAAPDa-iFysykBq3ch90JB6_RxjpV1"></script>
<script>
    grecaptcha.ready(function() {
        grecaptcha.execute('6Lfx-gIsAAAAAPDa-iFysykBq3ch90JB6_RxjpV1', {action: 'forgot_password'}).then(function(token) {
            document.getElementById('recaptchaResponse').value = token;
        });
    });
</script>
{% endblock %}