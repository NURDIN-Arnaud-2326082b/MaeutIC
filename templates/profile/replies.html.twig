{% extends 'base.html.twig' %}

{% block title %}Mes R√©ponses - Profil{% endblock %}

{% block stylesheets %}
    <script src="https://cdn.tailwindcss.com"></script>
{% endblock %}

{% block body %}
    {{ render(controller('App\\Controller\\NavbarController::navbar')) }}
    
    <div class="container mx-auto py-6">
        <div class="bg-white/45 backdrop-blur-sm shadow-xl p-6 rounded-lg">
            <!-- Navigation des onglets -->
            <div class="flex space-x-4 mb-6 border-b">
                <a href="{{ path('app_profile_posts') }}" 
                   class="px-4 py-2 text-gray-600 hover:text-blue-600 border-b-2 border-transparent hover:border-blue-600">
                    Posts/R√©ponses
                </a>
                <a href="{{ path('app_profile_comments') }}" 
                   class="px-4 py-2 text-gray-600 hover:text-blue-600 border-b-2 border-transparent hover:border-blue-600">
                    Commentaires
                </a>
                <a href="{{ path('app_profile_replies') }}" 
                   class="px-4 py-2 text-blue-600 font-semibold border-b-2 border-blue-600">
                    R√©ponses ({{ replies|length }})
                </a>
            </div>

            <h2 class="text-2xl font-bold text-gray-800 mb-6">Mes R√©ponses</h2>

            {% if replies|length == 0 %}
                <div class="text-center py-8">
                    <div class="text-gray-400 text-6xl mb-4">üí¨</div>
                    <p class="text-gray-600 text-lg">Vous n'avez encore publi√© aucune r√©ponse</p>
                    <p class="text-gray-500 mt-2">Participez aux discussions en r√©pondant aux posts qui vous int√©ressent !</p>
                </div>
            {% else %}
                <div class="space-y-4">
                    {% for reply in replies %}
                        <div class="bg-white p-4 rounded-lg border-l-4 border-green-500 shadow-sm hover:shadow-md transition-shadow">
                            <!-- En-t√™te de la r√©ponse -->
                            <div class="flex justify-between items-start mb-2">
                                <div class="flex-1">
                                    <h3 class="font-semibold text-gray-800">{{ reply.name }}</h3>
                                    <div class="flex items-center text-sm text-gray-500 mt-1">
                                        <span>R√©ponse √† :</span>
                                        {% if reply.parentPost %}
                                            <a href="{{ path('app_forums', { 
                                                category: reply.forum.title, 
                                                postId: reply.parentPost.id 
                                            }) }}" class="text-blue-600 hover:text-blue-800 ml-1">
                                                {{ reply.parentPost.name }}
                                            </a>
                                        {% endif %}
                                        <span class="mx-2">‚Ä¢</span>
                                        <span>{{ reply.creationDate|date('d/m/Y H:i') }}</span>
                                        <span class="mx-2">‚Ä¢</span>
                                        <span class="text-blue-600">{{ reply.forum.title }}</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Contenu de la r√©ponse -->
                            <div class="text-gray-700 mb-3">
                                {% if reply.description|length > 300 %}
                                    {{ reply.description|slice(0, 300) }}...
                                    <a href="{{ path('app_forums', { 
                                        category: reply.forum.title, 
                                        postId: reply.parentPost ? reply.parentPost.id : reply.id 
                                    }) }}" class="text-blue-600 hover:text-blue-800">
                                        Lire la suite
                                    </a>
                                {% else %}
                                    {{ reply.description }}
                                {% endif %}
                            </div>

                            <!-- Actions -->
                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-4">
                                    <!-- Likes -->
                                    <div class="flex items-center">
                                        {% if userRepliesLikes[reply.id] %}
                                            <button class="post-like-btn text-red-500 text-lg mr-2" data-post-id="{{ reply.id }}">‚ô•</button>
                                        {% else %}
                                            <button class="post-like-btn text-gray-500 text-lg mr-2" data-post-id="{{ reply.id }}">‚ô°</button>
                                        {% endif %}
                                        <span data-post-like-count="{{ reply.id }}" class="text-gray-600">
                                            {{ repliesLikes[reply.id] }}
                                        </span>
                                    </div>
                                </div>

                                <!-- Lien vers la discussion -->
                                <a href="{{ path('app_forums', { 
                                    category: reply.forum.title, 
                                    postId: reply.parentPost ? reply.parentPost.id : reply.id 
                                }) }}" 
                                   class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded text-sm">
                                    Voir la discussion
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>

    {{ render(controller('App\\Controller\\FooterController::footer')) }}

    <!-- Script pour les likes -->
    <script>
        function likePost(id) {
            const btn = document.querySelector(`.post-like-btn[data-post-id="${id}"]`);
            const count = document.querySelector(`[data-post-like-count="${id}"]`);
            if (!btn || !count) return;
            
            if (btn.disabled) return;
            btn.disabled = true;
            
            const wasLiked = btn.textContent === '‚ô•';
            let currentCount = parseInt(count.textContent, 10) || 0;
            
            // Optimistic update
            if (wasLiked) {
                btn.textContent = '‚ô°';
                btn.classList.remove('text-red-500');
                btn.classList.add('text-gray-500');
                count.textContent = Math.max(0, currentCount - 1);
            } else {
                btn.textContent = '‚ô•';
                btn.classList.remove('text-gray-500');
                btn.classList.add('text-red-500');
                count.textContent = currentCount + 1;
            }

            fetch(`/post-like/toggle/${id}`, {
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.error) {
                    // Restaurer l'√©tat initial
                    if (wasLiked) {
                        btn.textContent = '‚ô•';
                        btn.classList.remove('text-gray-500');
                        btn.classList.add('text-red-500');
                        count.textContent = currentCount;
                    } else {
                        btn.textContent = '‚ô°';
                        btn.classList.remove('text-red-500');
                        btn.classList.add('text-gray-500');
                        count.textContent = currentCount;
                    }
                    return;
                }
                // Synchroniser avec la valeur du serveur
                count.textContent = data.count;
                
                if (data.liked) {
                    btn.textContent = '‚ô•';
                    btn.classList.remove('text-gray-500');
                    btn.classList.add('text-red-500');
                } else {
                    btn.textContent = '‚ô°';
                    btn.classList.remove('text-red-500');
                    btn.classList.add('text-gray-500');
                }
            })
            .catch(() => {
                // Restaurer en cas d'erreur r√©seau
                if (wasLiked) {
                    btn.textContent = '‚ô•';
                    btn.classList.remove('text-gray-500');
                    btn.classList.add('text-red-500');
                    count.textContent = currentCount;
                } else {
                    btn.textContent = '‚ô°';
                    btn.classList.remove('text-red-500');
                    btn.classList.add('text-gray-500');
                    count.textContent = currentCount;
                }
            })
            .finally(() => {
                btn.disabled = false;
            });
        }

        // Event listener pour les likes
        document.addEventListener('click', (e) => {
            if (e.target.classList.contains('post-like-btn')) {
                e.preventDefault();
                e.stopPropagation();
                const postId = e.target.dataset.postId;
                likePost(postId);
            }
        });
    </script>
{% endblock %}
