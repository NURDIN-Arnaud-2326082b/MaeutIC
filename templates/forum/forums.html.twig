<script>
// Gestion simplifi√©e du lecteur audio - compatible Turbo
(function() {
    // V√©rifier si d√©j√† initialis√© pour √©viter les red√©clarations avec Turbo
    if (window.audioPlayerInitialized) return;
    window.audioPlayerInitialized = true;
    
    let audioInitialized = false;
    
    function initAudioPlayer() {
        const audio = document.getElementById('debussy-audio');
        const musicStatus = document.getElementById('music-status');
        
        if (!audio) {
            setTimeout(initAudioPlayer, 100);
            return;
        }
        
        // √âviter les initialisations multiples
        if (audioInitialized) return;
        audioInitialized = true;
        
        console.log('Initialisation audio...');
        
        // Configuration
        audio.preload = 'auto';
        audio.volume = 0.5;
        audio.currentTime = 0;
        
        let retryCount = 0;
        const maxRetries = 3;
        let canplayTriggered = false;
        
        function updateStatus(text, className = 'text-gray-500') {
            if (musicStatus) {
                musicStatus.textContent = text;
                musicStatus.className = `text-xs ${className}`;
                musicStatus.classList.remove('hidden');
            }
        }
        
        function hideStatus() {
            if (musicStatus) {
                musicStatus.classList.add('hidden');
            }
        }
        
        function loadAudio() {
            console.log('Chargement audio...');
            
            audio.pause();
            audio.currentTime = 0;
            canplayTriggered = false; // Reset du flag
            
            // Cache busting
            const source = audio.querySelector('source');
            if (source) {
                const originalSrc = source.src.replace(/\?v=.*$/, '');
                source.src = originalSrc + '?v=' + Date.now();
            }
            
            audio.load();
            updateStatus('Chargement...', 'text-gray-500');
        }
        
        function retryLoad() {
            if (retryCount < maxRetries) {
                retryCount++;
                console.log('Nouvelle tentative ' + retryCount + '/' + maxRetries);
                updateStatus('Nouvelle tentative ' + retryCount + '/' + maxRetries, 'text-yellow-500');
                setTimeout(loadAudio, 1000);
            } else {
                console.error('Echec du chargement');
                updateStatus('Echec du chargement', 'text-red-500');
            }
        }
        
        // √âv√©nements avec gestion des doublons
        function handleCanPlay() {
            if (canplayTriggered) return; // √âviter les d√©clenchements multiples
            canplayTriggered = true;
            
            console.log('Audio pret');
            audio.currentTime = 0;
            updateStatus('Pret', 'text-green-500');
            setTimeout(hideStatus, 2000);
            retryCount = 0;
        }
        
        function handleError() {
            console.error('Erreur audio');
            retryLoad();
        }
        
        function handleWaiting() {
            updateStatus('Buffering...', 'text-yellow-500');
        }
        
        function handlePlaying() {
            hideStatus();
        }
        
        function handleEnded() {
            audio.currentTime = 0;
        }
        
        // Nettoyer les anciens √©couteurs d'abord
        audio.removeEventListener('canplay', handleCanPlay);
        audio.removeEventListener('error', handleError);
        audio.removeEventListener('waiting', handleWaiting);
        audio.removeEventListener('playing', handlePlaying);
        audio.removeEventListener('ended', handleEnded);
        
        // Ajouter les nouveaux √©couteurs
        audio.addEventListener('canplay', handleCanPlay, { once: true }); // once: true pour √©viter les multiples d√©clenchements
        audio.addEventListener('error', handleError);
        audio.addEventListener('waiting', handleWaiting);
        audio.addEventListener('playing', handlePlaying);
        audio.addEventListener('ended', handleEnded);
        
        // Chargement initial
        loadAudio();
        
        // R√©essayer apr√®s 2s si probl√®me d√©tect√©
        setTimeout(() => {
            if (audio.readyState === 0 || audio.duration === 0) {
                console.log('Probleme detecte, rechargement...');
                loadAudio();
            }
        }, 2000);
        
        // Fonctions globales
        window.forceAudioReload = function() {
            canplayTriggered = false;
            loadAudio();
        };
        
        window.debugAudio = function() {
            console.log('Audio - currentTime:', audio.currentTime, 'duration:', audio.duration, 'readyState:', audio.readyState);
        };
    }
    
    // D√©marrer l'initialisation
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initAudioPlayer);
    } else {
        initAudioPlayer();
    }
    
    // G√©rer les navigations Turbo
    document.addEventListener('turbo:load', function() {
        // R√©initialiser compl√®tement pour les nouvelles pages
        window.audioPlayerInitialized = false;
        audioInitialized = false;
        setTimeout(initAudioPlayer, 100);
    });
})();
</script>


