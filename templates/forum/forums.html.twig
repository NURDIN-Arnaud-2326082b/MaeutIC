<script>
document.addEventListener("DOMContentLoaded", () => {
    const popup = document.getElementById("music-popup");
    
    if (popup) {
        // Initialiser le popup comme cach√© mais positionn√©
        popup.classList.remove('hidden');
        popup.style.display = 'block';
        
        // Fonction pour afficher le popup
        const showPopup = () => {
            popup.classList.remove('opacity-0', 'hidden');
            popup.classList.add('opacity-100');
            popup.style.transform = 'translateY(0)';
            popup.style.pointerEvents = 'auto';
        };
        
        // Fonction pour cacher le popup
        const hidePopup = () => {
            popup.classList.remove('opacity-100');
            popup.classList.add('opacity-0');
            
            // Apr√®s l'animation, cacher compl√®tement
            setTimeout(() => {
                popup.classList.add('hidden');
                popup.style.pointerEvents = 'none';
            }, 500);
        };
        
        // Afficher apr√®s un court d√©lai
        setTimeout(() => {
            showPopup();
        }, 1000);
        
        // Cacher apr√®s 5 secondes
        setTimeout(() => {
            hidePopup();
        }, 6000);
        
        // Cacher si on clique sur le popup
        popup.addEventListener('click', hidePopup);
        
        // Cacher si on clique ailleurs sur la page
        document.addEventListener('click', (e) => {
            if (!popup.contains(e.target) && !popup.classList.contains('hidden')) {
                hidePopup();
            }
        });
    }

    // Gestion de la musique
    const audio = document.getElementById('debussy-audio');
    if (audio) {
        const forumKey = "debussy_forum_{{ category }}";
        
        // Charger l'√©tat sauvegard√©
        const saved = JSON.parse(localStorage.getItem(forumKey) || "{}");
        if (saved.currentTime) {
            audio.currentTime = saved.currentTime;
        }
        
        // Tenter la lecture apr√®s interaction utilisateur
        const tryPlay = () => {
            if (audio.paused) {
                audio.play().catch(e => {
                    console.log('Lecture n√©cessite une interaction utilisateur');
                });
            }
        };
        
        // √âcouter les interactions utilisateur
        document.addEventListener('click', tryPlay, { once: true });
        
        // Sauvegarder l'√©tat r√©guli√®rement
        setInterval(() => {
            localStorage.setItem(forumKey, JSON.stringify({
                currentTime: audio.currentTime,
                paused: audio.paused
            }));
        }, 1000);
    }
});
</script>


