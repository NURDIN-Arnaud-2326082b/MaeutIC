            <span class="ml-3 text-gray-600">Recherche en cours...</span>
        </div>
    `;
    
    // Requ√™te AJAX
    fetch(`/forums/search?q=${encodeURIComponent(query)}&type=${searchType}&date=${dateFilter}&sort=${sortBy}&category=${encodeURIComponent(currentCategory)}`, {
        headers: {
            'X-Requested-With': 'XMLHttpRequest',
        }
    })
    .then(response => {
