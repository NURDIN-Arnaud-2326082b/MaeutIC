            </div>
        `;
    });
}

// Fonction pour r√©cup√©rer la cat√©gorie actuelle
function getCurrentCategory() {
    // M√©thode 1: R√©cup√©rer depuis l'URL
    const path = window.location.pathname;
    const match = path.match(/\/forums\/([^\/]+)/);
    if (match && match[1]) {
        return decodeURIComponent(match[1]);
    }
    
    // M√©thode 2: R√©cup√©rer depuis le lien actif dans le menu des cat√©gories
    const activeCategoryLink = document.querySelector('.bg-blue-50.text-blue-900');
    if (activeCategoryLink) {
        const href = activeCategoryLink.getAttribute('href');
        const categoryMatch = href.match(/\/forums\/([^\/]+)/);
        if (categoryMatch && categoryMatch[1]) {
            return decodeURIComponent(categoryMatch[1]);
        }
    }
    
    // M√©thode 3: Fallback - "General"
    return "General";
}

